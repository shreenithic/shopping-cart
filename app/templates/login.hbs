{{page-title "Login"}}

<GeneralContainer>
    <div class="login-form-container m-auto ">
        <form {{on "submit" this.login}} class="form">
            <h1 class="text-center p-4">Login</h1>
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input type="text" id="username" class="form-control" {{on "input" this.updateUsername}}>
            </div>

            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password" id="password" class="form-control" {{on "input" this.updatePassword}}>
            </div>

            <button type="submit" class="btn btn-primary w-100 mb-5">Login</button>
        </form>
    </div>
</GeneralContainer>




{{outlet}}