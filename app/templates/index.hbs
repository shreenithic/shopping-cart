    <SearchBar @searchText={{this.searchText}} @onSearch={{this.updateSearchText}} />

    <CheckBox @isChecked={{this.showAvailableOnly}} @onToggle={{this.toggleAvailability}} />


    {{#each this.filteredProducts as |product|}}
     <Product @product={{product}}/>
    {{/each}}
   
</GeneralContainer>


