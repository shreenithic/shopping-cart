{{page-title "Item"}}
<GeneralContainer>
    
    <div class="product item-details-page">
        <Product::Image @src={{this.model.image}}/>
        <Product::Details 
          @name={{this.model.name}}
          @price={{this.model.price}}
        />
       
    </div>
     

    <h5 class="mt-5">Features</h5>
    <ul>
        {{#each this.model.features as |feature|}}
         <li>{{feature}}</li>
        {{/each}}
    </ul>

    <BuyNowButton />
</GeneralContainer>
{{outlet}}